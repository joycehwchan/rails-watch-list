<div class="d-flex justify-content-center my-4">
  <button type="button" class="black-btn" data-bs-toggle="modal" data-bs-target="#listForm">
    Add a List
  </button>
</div>

<div class="modal fade" id="listForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <%= render 'lists/form', list: @list %>
      </div>
    </div>
  </div>
</div>

<div class="cards">
  <% @lists.each do |list| %>
    <%= render 'lists/card', list: list %>
  <% end %>
</div>
